{
  "name": "devcontainer",
  "image": "ghcr.io/mrsimonemms/devcontainers/full",
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "installTerraformDocs": true,
      "installTFsec": true
    },
    "ghcr.io/devcontainers-contrib/features/gh-release:1": {
      "repo": "civo/cli",
      "binaryNames": "civo"
    }
  },
  "postCreateCommand": {
    "civo-completion": "civo completion bash | sudo tee -a /etc/bash_completion.d/civo > /dev/null"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.makefile-tools"
      ],
      "settings": {}
    }
  }
}
