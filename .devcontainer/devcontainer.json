{
  "name": "devcontainer",
  "image": "ghcr.io/mrsimonemms/devcontainers/full",
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "installTerraformDocs": true,
      "installTFsec": true
    },
    "ghcr.io/devcontainers-contrib/features/digitalocean-cli:1": {}
  },
  "postCreateCommand": {
    "doctl-completion": "doctl completion bash | sudo tee -a /etc/bash_completion.d/doctl > /dev/null"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.makefile-tools"
      ],
      "settings": {}
    }
  }
}
